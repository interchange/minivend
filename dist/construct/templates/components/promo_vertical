<!-- BEGIN COMPONENT promo_vertical -->
[query arrayref=main
	   sql="
		SELECT sku,timed_promotion,start,finish
		FROM merchandising
		WHERE featured = '[scratch vpromo_type]'
		"][/query]
[perl tables=merchandising]
	my @out;
	my $ref;
	my $db;
	delete $Scratch->{promo_codes};
	my $date = $Tag->time( { body => '%Y%m%d' } );
	$ref = $Tmp->{main} or return;
	$db = $Db{merchandising} or return;
	my $idx = $db->config('KEY_INDEX');
	for(@$ref) {
		my $line = $_;
		push(@out, $line->[0]), next if ! $line->[1];
		next if $line->[2] gt $date;
		next if $line->[3] lt $date;
		push @out, $line->[0];
	}
	$Scratch->{promo_codes} = join(' ', @out);
	return;
[/perl]
[loop
    random="[either][scratch component_vsize][or]3[/either]"
    list="[scratch promo_codes]"
         ] 
