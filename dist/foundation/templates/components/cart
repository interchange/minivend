[/else]
[/if]
	  <TD>&nbsp;</TD>
	  <TD>&nbsp;</TD>
	</TR>
[/address]
[/item-tag-address]

[if session logged_in]
	<TR class="[item-calc]$row_class || 'cartalt'[/item-calc]">
	  <TD ALIGN="right" COLSPAN="6" valign="top">
		[if value separate_addresses]

