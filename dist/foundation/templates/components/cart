			if="[value separate_addresses]"
			form="
				mv_action=refresh
				edit_addresses=1
				"
			textarea=1
			widget=links]
[address]

	<TR class="[item-calc]$row_class || 'cartalt'[/item-calc]">

[if cgi edit_addresses]
