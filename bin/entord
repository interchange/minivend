#!/usr/bin/perl
#
# ENTORD - Fake backend entry program for demo

chomp( @data = <> );
(	$name,$company,$address,$city,$state,
	$zip,$account,$country,$shipmode,
	%items) = @data;

print <<EOF ;

The following order was entered:

       Name: $name
    Company: $company
    Address: $address
       City: $city    State: $state  Zip: $zip
    Country: $country

Account No.: $account

 Shipped by: $shipmode

ITEM         QUANTITY
----------   --------
EOF


for (sort keys %items) {
	printf "%-12s %6d\n", $_, $items{$_};
}

print "\nSIMULATED ORDER CONFIRMED\n";

