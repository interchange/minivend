#!/usr/bin/perl -w
# testpages - starts Vend in server mode
$VEND = '/usr/local/lib/minivend/minivend.pl';
$PERL = '/usr/bin/perl';
$PerlFlags = '-w';
## END CONFIGURABLE VARIABLES
$| = 1;
print "Checking MiniVend pages, please wait...";
system $PERL, $PerlFlags, $VEND, '-test', @ARGV;

unless(($? >> 8) != 0) {
	print "all tested good.\n";
}
else {
	print "Not OK.\n";
}
