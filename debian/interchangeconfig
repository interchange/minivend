#! /bin/sh -e

# Source debconf library
. /usr/share/debconf/confmodule

SETTINGSCFG=/etc/interchange/settings.cfg
cat > $SETTINGSCFG <<EOF
# This file is automatically generated !
#
# YOU MAY MODIFY THIS FILE
# But we recommend to use dpkg-reconfigure interchange instead.

EOF

db_get interchange/debug
if [ "$RET" = "true" ]; then
	echo "Variable DEBUG 1" >> $SETTINGSCFG
else
	echo "#Variable DEBUG 1" >> $SETTINGSCFG	
fi

if db_get interchange-ui/uilocales; then
	echo "$RET" | sed "s/German/Variable UI_LOCALE_DE 1/" >> $SETTINGSCFG
fi
