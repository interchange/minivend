if [ "$1" = "purge" ]; then
	# Automatically generated configuration files
	rm -f /etc/interchange/features.cfg
	rm -f /etc/interchange/settings.cfg
	# CGI link programs
	rm -r /usr/lib/cgi-bin/ic
	# Log files
	rm -f /var/log/interchange/debug.log
	rm -f /var/log/interchange/error.log*
	rm -f /var/log/interchange/makecat.log
fi

